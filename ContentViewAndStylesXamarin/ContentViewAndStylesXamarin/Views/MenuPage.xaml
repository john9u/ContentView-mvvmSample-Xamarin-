<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContentViewAndStylesXamarin.Views.MenuPage"
             xmlns:views="clr-namespace:ContentViewAndStylesXamarin.Views"
             BackgroundColor="#F0F0F0">
    <Grid Style="{StaticResource SixElementsGridStyle}">
        <views:MenuView
            Grid.Row="0"
            Grid.Column="0"
            BindingContext="{Binding Cars}"
        />
        <views:MenuView
            Grid.Row="0"
            Grid.Column="1"
            BindingContext="{Binding Parts}"
            />
        <views:MenuView
            Grid.Row="1"
            Grid.Column="0"
            BindingContext="{Binding Contracts}"
            />
        <views:MenuView
            Grid.Row="1"
            Grid.Column="1"
            BindingContext="{Binding Contacts}"
            />
        <views:MenuView
            Grid.Row="2"
            Grid.Column="0"
            BindingContext="{Binding Promotions}"
            />
        <views:MenuView
            Grid.Row="2"
            Grid.Column="1"
            BindingContext="{Binding Garages}"
            />
    </Grid>
</ContentPage>